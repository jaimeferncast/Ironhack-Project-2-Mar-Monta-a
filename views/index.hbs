<div class="container">
    <div class="row">

        {{!-- Modal --}}
        <div class="modal fade" id="newPlaceForm" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newPlaceForm">¿Cómo quieres llamar a este lugar?
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span>&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="PUT" action="" id="add-place-form">
                            <div class="form-group">
                                <input name="name" type="text" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Info del clima --}}
        <div class="col-12" id="info-place">
        </div>

        <div class="col-12">
            <form action="/index" method="POST">
                <div class="input-group mb-3">
                    <input name="direction" type="text" class="form-control"
                        placeholder="Escribe el nombre de un lugar">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Buscar</button>
                    </div>
                    <figure id="map"></figure>
                    
            </form>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascripts/map-styles.js"></script>
<script src="/javascripts/map-configs.js"></script>
<script src="/javascripts/weather-config.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{googleAPI}}&callback=initMap"></script>